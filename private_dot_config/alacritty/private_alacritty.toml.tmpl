[window]
decorations = "none"
opacity = {{ .alacritty_opacity }}

[window.padding]
x = 10
y = 10

[window.dimensions]
columns = 80
lines = 24

[cursor]
style = "Underline"

[font]
size = 14

[font.bold]
family = "Hack Nerd Font"
style = "Bold"

[font.bold_italic]
family = "Hack Nerd Font"
style = "Bold Italic"

[font.italic]
family = "Hack Nerd Font"
style = "Italic"

[font.normal]
family = "Hack Nerd Font"
style = "Regular"

[general]
import = ["/home/adrien/.config/alacritty/{{ .global_theme }}.toml"]

[terminal]

[terminal.shell]
program = "/usr/bin/fish"
